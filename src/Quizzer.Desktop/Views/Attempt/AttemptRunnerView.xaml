<UserControl x:Class="Quizzer.Desktop.Views.Attempt.AttemptRunnerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Padding="12" BorderThickness="1" BorderBrush="#333" CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="{Binding Header}" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Subheader}" Opacity="0.8" Margin="0,4,0,0"/>
                    <TextBlock Text="{Binding ProgressLabel}" Margin="0,6,0,0" />
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Reiniciar" Padding="14,8" Command="{Binding StartCommand}" />
                    <Button Content="Finalizar" Padding="14,8" Margin="8,0,0,0"
                            Command="{Binding FinishCommand}" IsEnabled="{Binding CanFinish}" />
                    <Button Content="Volver" Padding="14,8" Margin="8,0,0,0"
                            Command="{Binding BackCommand}" />
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <Border BorderThickness="1" BorderBrush="#333" CornerRadius="8" Padding="12">
                <StackPanel>
                    <TextBlock Text="{Binding CurrentQuestion.Text}" FontSize="16" FontWeight="SemiBold"/>
                    <ListBox ItemsSource="{Binding CurrentQuestion.Options}"
                             SelectedItem="{Binding CurrentQuestion.SelectedOption}"
                             DisplayMemberPath="Text"
                             Margin="0,12,0,0" />
                    <CheckBox Content="Marcar duda" IsChecked="{Binding CurrentQuestion.FlaggedDoubt}" Margin="0,8,0,0" />

                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                        <Button Content="Anterior" Padding="14,8" Command="{Binding PreviousCommand}" IsEnabled="{Binding CanGoPrevious}" />
                        <Button Content="Siguiente" Padding="14,8" Margin="8,0,0,0" Command="{Binding NextCommand}" IsEnabled="{Binding CanGoNext}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" BorderThickness="1" BorderBrush="#333" CornerRadius="8" Padding="12">
                <StackPanel>
                    <TextBlock Text="Resultado" FontSize="16" FontWeight="SemiBold" />
                    <TextBlock Text="{Binding ResultSummary}" Margin="0,8,0,0" />
                    <TextBlock Text="Estado" Margin="0,12,0,4" FontWeight="SemiBold" />
                    <TextBlock Text="{Binding IsFinished, StringFormat=Finalizado: {0}}" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
