<UserControl x:Class="Quizzer.Desktop.Views.Exams.ExamDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Padding="12" BorderThickness="1" BorderBrush="#333" CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Subtitle}" Opacity="0.8" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Refrescar" Padding="14,8" Command="{Binding RefreshCommand}" />
                    <Button Content="Editar Draft" Padding="14,8" Margin="8,0,0,0"
                            Command="{Binding OpenDraftEditorCommand}" IsEnabled="{Binding HasDraft}" />
                    <Button Content="Iniciar intento" Padding="14,8" Margin="8,0,0,0"
                            Command="{Binding StartAttemptCommand}" IsEnabled="{Binding CanStartAttempt}" />
                    <Button Content="Reportes" Padding="14,8" Margin="8,0,0,0"
                            Command="{Binding OpenReportsCommand}" />
                    <Button Content="Volver" Padding="14,8" Margin="8,0,0,0"
                            Command="{Binding BackCommand}" />
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2" Padding="12" BorderThickness="1" BorderBrush="#333" CornerRadius="8">
            <StackPanel>
                <TextBlock Text="Resumen" FontSize="16" FontWeight="SemiBold" />
                <TextBlock Text="{Binding DraftLabel}" Margin="0,8,0,0" />
                <TextBlock Text="{Binding PublishedLabel}" Margin="0,4,0,0" />
                <TextBlock Text="{Binding QuestionCountLabel}" Margin="0,4,0,0" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
